
<%= form_for(@company) do |f| %>

        <% if @company.errors.any? %>
          <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</p>
            <ul>
            <% @company.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row">
           <div class="col-lg-4 col-lg-offset-4">
               <div class="input-group">
              <div class="form-group">
                <%= f.label :companyname,"Company Name"%><br>
                <%= f.text_field :companyname,:placeholder=>"Company Name" %>
              </div>
              <div class="form-group">
                <%= f.label :companyaddress, "Company Address"%><br>
                <%= f.text_area :companyaddress,:placeholder=>"Company Address",:id=>"textarea"%>
              </div>
              <div class="form-group">
                <%= f.label :contactperson,"Contact Person"%><br>
                <%= f.text_field :contactperson,:placeholder=>"Contact Person" %>
              </div>
              <div class="form-group">
                <%= f.label :contactnumber,"Contact Number"%><br>
                <%= f.number_field :contactnumber,:placeholder=>"Contact Number" %>
              </div>
              <div class="form-group">
                <%= f.label :companyemail,"Company Email"%><br>
                <%= f.text_field :companyemail,:placeholder=>"Company Email" %>
              </div>
              <div class="actions">
                <%= f.submit :class=>"btn btn-primary btn-lg" %>
              </div>
            </div>
          </div>
        </div>
<% end %>
