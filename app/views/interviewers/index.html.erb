<p id="notice"><%= notice %></p>

<h1>Listing Interviewers</h1>
<div class="table-responsive">
<table class="table table-bordered table-hover sortable">
  <thead class="bg-success">
    <tr>
      <th class="text-info">Interviewername</th>
      <th class="text-info">Interviewercompany</th>
      <th class="text-info">CompanyEmail</th>
      <th class="text-info">Skills1</th>
       <th class="text-info">Skills2</th>
       <th class="text-info">Skills3</th>
       <th class="text-info">Skills4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviewers.each do |interviewer| %>
      <tr>
        <td><%= interviewer.interviewername%></td>
        <td><%= interviewer.interviewercompany %></td>
          <td><%= interviewer.companyemail%></td>
          <td><%= interviewer.skills1%></td>
          <td><%= interviewer.skills2%></td>
          <td><%= interviewer.skills3%></td>
          <td><%= interviewer.skills4%></td>
        <td><%= link_to 'Show', interviewer,:class=>"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_interviewer_path(interviewer),:class=>"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', interviewer, method: :delete,:class=>"btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'New Interviewer', new_interviewer_path %>
