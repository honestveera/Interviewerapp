<div class="jumbotron">
<h3>Candidate Schedule Reports</h3>
<div class="table-responsive">
<table class="datatable table table-bordered table-hover sortable">
  <thead class="bg-success">
    <tr>
      <th class="text-info">Candidatename</th>
      <th class="text-info">Candidateemail</th>
      <th class="text-info">Candidatecontact</th>
      <th class="text-info">Skills</th>
      <th class="text-info">Yoe</th>
      <th class="text-info">Interviewername</th>
      <th class="text-info">Intervieweremail</th>
      <th class="text-info">Scheduledate</th>
      <th class="text-info">Scheduletime</th>
      <th class="text-info">Jobdescription</th>
      <th class="text-info" >Show</th>
      <th class="text-info">Edit</th>
      <th class="text-info">Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @candidateprofiles.each do |candidateprofile| %>
      <tr>
        <td><%= candidateprofile.candidatename %></td>
        <td><%= candidateprofile.candidateemail %></td>
        <td><%= candidateprofile.candidatecontact %></td>
        <td><%= candidateprofile.skills %></td>
        <td><%= candidateprofile.YOE %></td>
        <td><%= candidateprofile.interviewername %></td>
        <td><%= candidateprofile.intervieweremail %></td>
        <td><%= candidateprofile.scheduledate %></td>
        <td><%= candidateprofile.scheduletime %></td>
        <td><%= candidateprofile.jobdescription %></td>
        <td><%= link_to 'Show', candidateprofile,:class=>"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_candidateprofile_path(candidateprofile),:class=>"btn btn-info btn-sm"%></td>
        <td><%= link_to 'Destroy', candidateprofile, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<script type="text/javaScript">
 $('.datatable').DataTable({
    "paging": true,
    "ordering": true,
    "info": true,
    "scrollY": "300px"
  });

</script>
</div>
</div>
