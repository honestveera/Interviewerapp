<%= form_for(@candidateprofile) do |f| %>


  <% if @candidateprofile.errors.any? %>
  <div class="alert alert-danger fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <div >
      <h2><%= pluralize(@candidateprofile.errors.count, "error") %> prohibited this candidateprofile from being saved:</h2>

      <ul>
      <% @candidateprofile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>
  <div class="row">
     <div class="col-lg-4 col-lg-offset-2">
         <div class="input-group">
  <div class="field">
    <%= f.label :candidatename ,"Candidate Name"%><br>
    <%= f.select :candidatename,options_from_collection_for_select(Candidatedetail.all,"candidatename","candidatename"),:prompt=>"--Select Candidatename--"%>
  </div>
  <div class="field">
    <%= f.label :candidateemail,"Candidate Email" %><br>
    <%= f.text_field :candidateemail,:placeholder=>"Candidate Email" ,:readonly => true%>
  </div>
  <div class="field">
    <%= f.label :candidatecontact,"Candidate Contact"%><br>
    <%= f.text_field :candidatecontact,:placeholder=>"Candidate Contact",:readonly => true%>
  </div>
  <div class="field">
    <%= f.label :skills,"Skills" %><br>
    <%=f.text_field :skills,:placeholder=>"Candidate Skills",:readonly => true%>
  </div>
  <div class="field">
    <%= f.label :YOE,"Year Of Experience " %><br>
    <%= f.text_field :YOE,:placeholder=>"Year Of Experience",:id=>"textarea",:readonly => true%>
  </div>

</div>
</div>
<div class="col-lg-3 col-lg-offset-1">
    <div class="input-group">

  <div class="field">
    <%= f.label :interviewername,"Interviewer Name"%><br>
    <%=f.select :interviewername,options_from_collection_for_select(Interviewer.all,"interviewername","interviewername"), :prompt => "--Select Interviewer--" %>

  </div>
  <div class="field">
    <%= f.label :intervieweremail ,"Interviewer Mail"%><br>
    <%=f.text_field :intervieweremail,:placeholder=>"Interviewer Mail",:readonly => true%>
  </div>
  <div class="field">
    <%= f.label :scheduledate,"Schedule Date" %><br>
    <%=f.select :scheduledate,options_from_collection_for_select(Calender.all,"dates","dates"), :prompt => "--Select ScheduleDate--" %>

  </div>
  <div class="field">
    <%= f.label :scheduletime,"Schedule Time"%><br>
    <%=f.select :scheduletime,options_from_collection_for_select(Calender.all,"times","times"), :prompt => "--Select ScheduleTime--" %>
  </div>
  <div class="field">
    <%= f.label :jobdescription,"Job Description" %><br>
    <%= f.text_area :jobdescription,:placeholder=>"Job Description",:id=>"textarea"  %>
  </div>
  <div class="form-group">
    <%= f.hidden_field "companyemail",:class=>"required",:value => session[:companyemail]%>
  </div>
  <div class="form-group">
    <%= f.hidden_field "password",:class=>"required",:value => session[:password]%>
  </div>
</div>
</div>
<div class="row">
  <div  class="col-lg-4 col-lg-offset-5">
  <div class="actions">
    <%= f.submit :class=>"btn btn-primary btn-lg",:style=>"margin-left: -40px;"%>
  </div>
</div>
</div>
</div>
<% end %>
