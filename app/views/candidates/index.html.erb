<p id="notice"><%= notice %></p>

<h1>Listing Candidates</h1>
<div class="table-responsive">
<table class="table table-bordered table-hover sortable">
  <thead class="bg-success">
    <tr>
      <th class="text-info">Candidatename</th>
      <th class="text-info">Candidateemail</th>
      <th class="text-info">Candidatecontact</th>
      <th class="text-info">Skills</th>
      <th class="text-info">Year of Experience</th>
      <th class="text-info">Interviewername</th>
      <th class="text-info">Intervieweremail</th>
      <th class="text-info">Scheduledate</th>
      <th class="text-info">Scheduletime</th>
      <th class="text-info">Jobdescription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.candidatename %></td>
        <td><%= candidate.candidateemail %></td>
        <td><%= candidate.candidatecontact %></td>
        <td><%= candidate.skills %></td>
        <td><%= candidate.YOE %></td>
        <td><%= candidate.interviewername %></td>
        <td><%= candidate.intervieweremail %></td>
        <td><%= candidate.scheduledate %></td>
        <td><%= candidate.scheduletime %></td>
        <td><%= candidate.jobdescription %></td>
        <td><%= link_to 'Show', candidate,:class=>"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate),:class=>"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete,:class=>"btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

