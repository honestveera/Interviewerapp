<p id="notice"><%= notice %></p>

<h1>Listing Calenders</h1>
<div class="table-responsive">
<table class="table table-bordered table-hover sortable">
  <thead class="bg-success">
    <tr>
      <th class="text-info">Dates</th>
      <th>Times</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calenders.each do |calender| %>
      <tr>
        <td><%= calender.dates %></td>
        <td><%= calender.times %></td>
        <td><%= link_to 'Show', calender,:class=>"btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_calender_path(calender),:class=>"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', calender, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Calender', new_calender_path,:class=>"btn btn-primary btn-sm text-warning"  %>
